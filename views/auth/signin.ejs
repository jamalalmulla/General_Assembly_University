  <body>
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-20 col-md-11 col-lg-10 col-xl-8">
          <div class="card bg-dark text-white" style="border-radius: 1rem">
            <div class="card-body p-5 text-center">
              <div class="mb-md-5 mt-md-4 pb-5">
                <h1 class="text-center">
                  <img src="../images/NajeemLogo-01.png" alt="html" class="logo-signin">
                  <a href="/" class="text-white-50"
                    >General Assembly University</a>
                  
                  <br>
                  <br>

                </h1>
                <h1 class="text-center">Sign In</h1>
                <form class="w-50 mx-auto" method="POST" action="/auth/signin">
                  <div class="form-group mb-4">
                    <label>Email Address</label>
                    <input type="email" name="email" class="form-control" />
                  </div>
                  <div class="form-group mb-4">
                    <label>Password</label>
                    <input
                      type="password"
                      name="password"
                      class="form-control"
                    />
                  </div>
                  <br />
                  <div class="text-center">
                    <button
                      type="submit"
                      class="btn btn-outline-light btn-lg px-5"
                    >
                      Sign In
                    </button>
                  </div>
                </form>
                <hr />
                <center>
                  <div>
                    <p class="mb-0">
                      Don't have an account?
                      <a href="./instructor_signup" class="text-blue-50 fw-bold"
                        >Sign Up</a
                      >
                    </p>
                  </div>
                </center>

                <br />
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

