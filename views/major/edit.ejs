<h1> Edit Major </h1>

<form method="POST" action="/major/update?_method=PUT">
    <div class="form-group">
        <label>Majors</label>
        <input type="text" name="title" value="<%= course.title %>"  class="form-control">
    </div>

    <div class="form-group">
        <label>Students</label>
        <input type="text" name="student" value="<%= major.student%>"  class="form-control">
    </div>

    <div class="form-group">
        <label>Instructors</label>
        <input type="text" name="instructor" value="<%= major.instructor %>"  class="form-control">
    </div>

    <div class="form-group">
        <label>Courses</label>
        <input type="text" name="course" value="<%= major.course %>"  class="form-control">
    </div>


    <input type="hidden" name="id" value="<%= major._id %>"  class="form-control">
    <br>
    <button type="submit" class="btn btn-primary">Update Major</button>

</form>