<h1> Add a Course for the Student </h1>

<form method="POST" action="/student/addCourse?_method=PUT">

    <div class="form-group">
        <label>Student ID</label>
        <input type="text" name="studentId" value="<%= student.userId %>" class="form-control">
    </div>

    <div class="form-group">
        <label>Student Name</label>
        <input type="text" name="fullName" value="<%= student.firstName %> <%= student.lastName %>" class="form-control">
    </div>

    <input type="hidden" name="id" value="<%= student.id %>"  class="form-control">
    <input type="hidden" name="password" value="<%= student.password %>"  class="form-control">
    <br>


    <div class="form-group">
        <label>Courses</label>
        <select name="course[]" multiple="multiple" class="form-control">
            <% courses.forEach(function(course){ %>
            
                <option value="<%= course._id %>"><%= course.title %></option>
            
            <% }) %>
        </select>
    </div>

    
    <br>
    <button type="submit" class="btn btn-primary">Add Course</button>

</form>
